{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
    "./app/**/*.ts",
    "!./node_modules/**/*.ts",
    "!./typings/main",
    "!./typings/main.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
